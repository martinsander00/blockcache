{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",                      // Changed from "ES6" to "ESNext"
    "moduleResolution": "node",              // Added moduleResolution
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "sourceMap": true
  },
  "include": ["src/**/*"]
}

